Config { overrideRedirect = False
       , font     = "xft:Sauce Code Pro Nerd Font-9"
       , bgColor  = "#000000"
       , fgColor  = "#b7b8b9"
       , position = Top
       , lowerOnStart =     True
       , commands = [
                     Run Date "%a %Y-%m-%d <fc=#8be9fd>%H:%M</fc>" "date" 10
                   , Run Battery  [ "--template" , "Batt: <acstatus>"
                                  , "--Low"      , "10"        -- units: %
                                  , "--High"     , "80"        -- units: %
                                  , "--low"      , "darkred"
                                  , "--normal"   , "darkorange"
                                  , "--high"     , "green"

                                  , "--" -- battery specific options
                                            -- discharging status
                                            , "-o"	, "<left>% (<timeleft>)"
                                            -- AC "on" status
                                            , "-O"	, "<left>%<fc=#dAA520>  </fc>"
                                            -- charged status
                                            , "-i"	, "<fc=#006000>Charged</fc>"
                                  ] 10
                    , Run DynNetwork     [ "--template" , "<fc=#31a354> </fc> <rx> kB/s : <fc=#3a7aab> </fc> <tx> kB/s"
                                         , "--Low"      , "1000"       -- units: B/s
                                         , "--High"     , "5000"       -- units: B/s
                                         , "--low"      , "darkorange"
                                         , "--normal"   , "darkorange"
                                         , "--high"     , "darkorange"
                                         ] 10
                    ,Run Volume "default" "Master" [] 10

                    ,Run MPD
                      [ "-t", "<fc=#31a354><statei></fc> <fc=#b7b8b9><artist></fc> — <fc=#80b1d3><title></fc> ", "--"
                      , "-P", "  ", "-Z", "  "
                      , "--host", "127.0.0.1"
                      ] 10

                    ,Run StdinReader
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %dynnetwork% | %mpd% | %default:Master% | %battery% | %date% "
       }
